    <title>Bus route</title>
</head>

<body>
    <!-- navbar part -->
    <%- include('./partials/navbar'); -%>

    <!-- header part -->
    <div class="header_hero">
        <div class="contianer">
            <div class="row">
                <div class="col-lg-6 col-10 mx-auto">
                    <div class="header_hero_text" id="heading" style="margin-left: 7rem;">
                        <h2 id="h2">Shift 2</h2>
                        <p>Just put address here and get the all routed bus</p>
                        <form class="temp_form">
                            <input type="text" id="street" placeholder="Enter your Stop" autocomplete="off">
                            <input type="submit" value="search" name="search">
                        </form>
                    </div>
    
                </div>
                <!-- right side images -->
                <div class="col-lg-6 col-10 mx-auto">
                    <figure class="header_hero__img">
                        <img src="./img/Bus.jpg" alt="" height="100">
                    </figure>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
